اشمل "../الـقلب"؛
اشمل "Core/Basic"؛

@دمج وحدة الـقلب {
    عرف أسـاسيات: لقب Basic؛
    @دمج وحدة أسـاسيات {
        عرف هات_من_الخزينة_العامة: لقب getFromGlobalStorage؛

        عرف مـصنع_كائن_بهوية: لقب TiObjectFactory؛
        @دمج صنف مـصنع_كائن_بهوية {
            عرف أنشئ_محتكر: لقب createPlain؛
            عرف أنشئ_مشترك: لقب createShared؛
            عرف هيئ: لقب initialize؛
            عرف أتلف: لقب terminate؛
        }

        عرف هـوية_صنف: لقب TypeInfo؛
        @دمج صنف هـوية_صنف {
            عرف اسم_الصنف: لقب typeName؛
            عرف مسار_الصنف: لقب typeNamespace؛
            عرف اسم_الحزمة: لقب packageName؛
            عرف الرابط: لقب url؛
            عرف الاسم_الفريد: لقب uniqueName؛
            عرف هوية_صنف_السلف: لقب baseTypeInfo؛
            عرف مصنع_الكائنات: لقب objectFactory؛
        }

        عرف كـائن_بهوية: لقب TiObject؛
        @دمج صنف كـائن_بهوية {
            عرف هات_هويتي: لقب getMyTypeInfo؛
            عرف أمشتق_من: لقب isDerivedFrom؛
            عرف هات_وسيط: لقب getInterface؛
        }

        عرف وسـيط_بهوية: لقب TiInterface؛
        @دمج صنف وسـيط_بهوية {
            عرف هات_هويتي: لقب getMyInterfaceInfo؛
            عرف هات_الكائن: لقب getTiObject؛
        }

        عرف هات_وسيط: لقب getInterface؛
        عرف أمشتق_من: لقب isDerivedFrom؛
        عرف عرف_سندا_بتمثيل_آمن: لقب defDynCastedRef؛

        ماكرو عرب_صنف_أساسي [الاسم_الانجليزي، الاسم_العربي] {
            عرف الاسم_العربي: لقب الاسم_الانجليزي؛
            @دمج صنف الاسم_العربي {
                عرف القيمة: لقب value؛
                عرف هات_هوية_الصنف: لقب getTypeInfo؛
                عرف أنشئ: لقب create؛
            }
        }

        عرب_صنف_أساسي[TiInt، صـحيح_بهوية]؛
        عرب_صنف_أساسي[TiWord، طـبيعي_بهوية]؛
        عرب_صنف_أساسي[TiFloat، عـائم_بهوية]؛
        عرب_صنف_أساسي[TiBool، ثـنائي_بهوية]؛
        عرب_صنف_أساسي[TiStr، نـص_بهوية]؛

        عرف ربـط: لقب Binding؛
        @دمج صنف ربـط {
            عرف حدد_عضوا: لقب setMember؛
            عرف هات_عدد_الأعضاء: لقب getMemberCount؛
            عرف هات_عضوا: لقب getMember؛
            عرف هات_الصنف_المطلوب_للعضو: لقب getMemberNeededType؛
            عرف هات_اسم_العضو: لقب getMemberKey؛
            عرف جد_تسلسل_العضو: لقب findMemberIndex؛
        }

        عرف احـتواء: لقب Containing؛
        @دمج صنف احـتواء {
            عرف حدد_عنصرا: لقب setElement؛
            عرف هات_عدد_العناصر: لقب getElementCount؛
            عرف هات_عنصرا: لقب getElement؛
            عرف هات_الصنف_المطلوب_للعنصر: لقب getElementNeededType؛
        }

        عرف احـتواء_مرن: لقب DynamicContaining؛
        @دمج صنف احـتواء_مرن {
            عرف أضف_عنصرا: لقب addElement؛
            عرف احشر_عنصرا: لقب insertElement؛
            عرف أزل_عنصرا: لقب removeElement؛
            عرف هات_الصنف_المطلوب_للعناصر: لقب getElementsNeededType؛
        }

        عرف احـتواء_تطبيقي: لقب MapContaining؛
        @دمج صنف احـتواء_تطبيقي {
            عرف حدد_عنصرا: لقب setElement؛
            عرف هات_عنصرا: لقب getElement؛
            عرف هات_الصنف_المطلوب_للعنصر: لقب getElementNeededType؛
            عرف هات_اسم_العنصر: لقب getElementKey؛
            عرف جد_تسلسل_العنصر: لقب findElementIndex؛
        }

        عرف احـتواء_تطبيقي_مرن: لقب DynamicMapContaining؛
        @دمج صنف احـتواء_تطبيقي_مرن {
            عرف أضف_عنصرا: لقب addElement؛
            عرف احشر_عنصرا: لقب insertElement؛
            عرف أزل_عنصرا: لقب removeElement؛
            عرف هات_الصنف_المطلوب_للعناصر: لقب getElementsNeededType؛
        }
    }
}

