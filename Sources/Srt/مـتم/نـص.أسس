اشمل "متم"؛
اشمل "Srl/String"؛

@دمج وحدة Srl {
    عرف قـالب_نص: لقب StringBase؛
    @دمج عرف StringBase:
    {
        عرف صوان: لقب buf؛

        عرّف هات_الطول: لقب getLength؛
        عرف احجز: لقب alloc؛
        عرف غير_الحجز: لقب realloc؛
        عرّف عين: لقب assign؛
        عرّف عيّن: لقب assign؛
        عرف ألحق: لقب append؛
        عرف الحق: لقب append؛
        عرّف سلسل: لقب concat؛
        عرّف جد: لقب find؛
        عرّف جد_آخر: لقب findLast؛
        عرّف قارن: لقب compare؛
        عرف استبدل: لقب replace؛
        عرف شذب: لقب trim؛
        عرف شذب_البداية: لقب trimStart؛
        عرف شذب_النهاية: لقب trimEnd؛
        عرف كبر: لقب toUpperCase؛
        عرف صغر: لقب toLowerCase؛
        عرف اجتزئ: لقب slice؛
        عرف قطع: لقب split؛
        عرف ادمج: لقب merge؛
        عرف فرغ: لقب clear؛

        عرّف انسخ: لقب copy؛
        عرّف امسح: لقب scan؛
        عرف أهو_فراغ: لقب isSpace؛
        عرف اهو_فراغ: لقب isSpace؛
        عرف أمتطابق: لقب isEqual؛
        عرف امتطابق: لقب isEqual؛
        عرف أزل: لقب remove؛
        عرف ازل: لقب remove؛
    }؛

    عرف نـص: لقب String؛
    @دمج صنف نـص {
        عرف املأ: لقب format؛
        عرف اقرأ_صحيح: لقب parseInt؛
        عرف اقرأ_عائم: لقب parseFloat؛
    }
}

