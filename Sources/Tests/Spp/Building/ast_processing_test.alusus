import "Srl/Console.alusus";
use Srl.Console;

macro defInt [n] { def n: Int; }

module MyMod {
  defInt[z];
  preprocess {
    print("MyMod preprocess\n");
  }
};

type Point {
  defInt[x];
  handler this.getDouble() { return this.x * 2 }
  preprocess {
    print("Point preprocess\n");
  }
}

func pointedFunction {
    print("pointedFunction\n");
}

def pf: ptr[function];

func test {
  defInt[abc];
  abc = 51;
  pf = pointedFunction~ptr;
  def pf2: ptr[function] = pointedFunction~ptr;
  print("%d\n", abc);

  def p: Point;
  p.x = 21;
  print("%d\n", p.x);

  preprocess {
    print("test preprocess\n");
  }

  pf();
  pf2();
}

dump_ast MyMod;
dump_ast Point;
dump_ast test;

test();

dump_ast MyMod;
dump_ast Point;
dump_ast test;
