import "libalusus_spp.so";

@expname[printf] func print(format: ptr[Word[8]], args: ...any): Int[32];

type A
{
  def i: Int;

  func print {
    print("this.i = %d\n", this.i);
  };

  func setI (i: Int) {
    this.i = i;
  };
};

type B
{
  def a: A;
  def f: ptr[function];

  on this~init() this.a.i = 7;
  on this~init(that: ref[this_type]) this.a = that.a;

  func getMyVal ()=>B {
    return this;
  };

  func getMyRef ()=>ref[B] {
    return this;
  };
};

def a: A;
a.setI(10);
a.print();

def b: B;
b.a.print();
b.getMyVal().a.print();
b.getMyRef().a.print();
