import "Srl/Console.alusus";

type T {
  def i: Int;

  @shared func construct (this: ref[T]) {
  };

  @shared func destruct (this: ref[T]) {
    Srl.Console.print("terminate! %d\n", this.i);
  };
};

def a: T;
a.i = 7;
a~terminate();

def pa: ptr[T];
pa = Srl.Memory.alloc(T~size)~cast[ptr[T]];
pa~cnt.i = 8;
pa~cnt~terminate();
Srl.Memory.free(pa);
