 اشمل "متم.أسس"؛

عرف ـرئيسي: حزمة
{
  عرف إبدأ: دالة ()
  {
    // بحث
    ـمتم.ـطرفية.اطبع("جد_محرف '-': %s\ج"، ـمتم.ـمحارف.جد_محرف("123 - 456 - 789"، '-'))؛
    ـمتم.ـطرفية.اطبع("جد_محرف '-'، 4: %d\ج"، ـمتم.ـمحارف.جد_محرف("123 - 456 - 789"، '-'، 4)~مثل[ـصحيح[64]] != 0)؛
    ـمتم.ـطرفية.اطبع("جد_محرف '-'، 5: %d\ج"، ـمتم.ـمحارف.جد_محرف("123 - 456 - 789"، '-'، 5)~مثل[ـصحيح[64]] != 0)؛
    ـمتم.ـطرفية.اطبع("جد_آخر_محرف '-': %s\ج"، ـمتم.ـمحارف.جد_آخر_محرف("123 - 456 - 789"، '-'))؛
    ـمتم.ـطرفية.اطبع("جد_محارف \"124\": %s\ج"، ـمتم.ـمحارف.جد_محارف("123 - 124 - 125"، "124"))؛

    // مقارنة
    ـمتم.ـطرفية.اطبع("قارن \"123\" مع \"123\": %d\ج"، ـمتم.ـمحارف.قارن("123"، "123"))؛
    ـمتم.ـطرفية.اطبع("قارن \"123\" مع \"1234\": %d\ج"، ـمتم.ـمحارف.قارن("123"، "1234"))؛
    ـمتم.ـطرفية.اطبع("قارن 3 \"123\" مع \"1234\": %d\ج"، ـمتم.ـمحارف.قارن("123"، "1234"، 3))؛

    // نسخ
    عرف صوان: مصفوفة[ـمحرف، 100]؛
    ـمتم.ـمحارف.انسخ(صوان~مؤشر، "-- بسم الله")؛
    ـمتم.ـطرفية.اطبع("انسخ: %s\ج"، صوان~مؤشر)؛
    ـمتم.ـمحارف.انسخ(صوان~مؤشر، "++ لا حول ولا قوة إلا بالله"، 2)؛
    ـمتم.ـطرفية.اطبع("انسخ 2: %s\ج"، صوان~مؤشر)؛

    // سَلسلة
    ـمتم.ـمحارف.سلسل(صوان~مؤشر، "، الحمد لله")؛
    ـمتم.ـطرفية.اطبع("سلسل: %s\ج"، صوان~مؤشر)؛
    ـمتم.ـمحارف.سلسل(صوان~مؤشر، "!!!!!"، 2)؛
    ـمتم.ـطرفية.اطبع("سلسل 2: %s\ج"، صوان~مؤشر)؛

    // طول
    ـمتم.ـطرفية.اطبع("جد_طول: %d\ج"، ـمتم.ـمحارف.جد_طول(صوان~مؤشر))؛
  }؛
}؛

نفذ ـرئيسي.إبدأ؛

