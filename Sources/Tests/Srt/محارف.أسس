 اشمل "مـتم/طـرفية.أسس"؛
 اشمل "مـتم/مـحارف.أسس"؛

عرف رئـيسي: وحدة
{
  عرف ابدأ: دالة ()
  {
    // بحث
    مـتم.طـرفية.اطبع("جد_محرف '-': %s\ج"، مـتم.مـحارف.جد_محرف("123 - 456 - 789"، '-'))؛
    مـتم.طـرفية.اطبع("جد_محرف '-'، 4: %d\ج"، مـتم.مـحارف.جد_محرف("123 - 456 - 789"، '-'، 4)~مثل[صـحيح[64]] != 0)؛
    مـتم.طـرفية.اطبع("جد_محرف '-'، 5: %d\ج"، مـتم.مـحارف.جد_محرف("123 - 456 - 789"، '-'، 5)~مثل[صـحيح[64]] != 0)؛
    مـتم.طـرفية.اطبع("جد_آخر_محرف '-': %s\ج"، مـتم.مـحارف.جد_آخر_محرف("123 - 456 - 789"، '-'))؛
    مـتم.طـرفية.اطبع("جد_محارف \"124\": %s\ج"، مـتم.مـحارف.جد_محارف("123 - 124 - 125"، "124"))؛

    // مقارنة
    مـتم.طـرفية.اطبع("قارن \"123\" مع \"123\": %d\ج"، مـتم.مـحارف.قارن("123"، "123"))؛
    مـتم.طـرفية.اطبع("قارن \"123\" مع \"1234\": %d\ج"، مـتم.مـحارف.قارن("123"، "1234"))؛
    مـتم.طـرفية.اطبع("قارن 3 \"123\" مع \"1234\": %d\ج"، مـتم.مـحارف.قارن("123"، "1234"، 3))؛

    // نسخ
    عرف صوان: مصفوفة[مـحرف، 100]؛
    مـتم.مـحارف.انسخ(صوان~مؤشر، "-- بسم الله")؛
    مـتم.طـرفية.اطبع("انسخ: %s\ج"، صوان~مؤشر)؛
    مـتم.مـحارف.انسخ(صوان~مؤشر، "++ لا حول ولا قوة إلا بالله"، 2)؛
    مـتم.طـرفية.اطبع("انسخ 2: %s\ج"، صوان~مؤشر)؛

    // سَلسلة
    مـتم.مـحارف.سلسل(صوان~مؤشر، "، الحمد لله")؛
    مـتم.طـرفية.اطبع("سلسل: %s\ج"، صوان~مؤشر)؛
    مـتم.مـحارف.سلسل(صوان~مؤشر، "!!!!!"، 2)؛
    مـتم.طـرفية.اطبع("سلسل 2: %s\ج"، صوان~مؤشر)؛

    // طول
    مـتم.طـرفية.اطبع("جد_طول: %d\ج"، مـتم.مـحارف.جد_طول(صوان~مؤشر))؛

    // انمط
    مـتم.طـرفية.اطبع("نمط النص (\"هاتف: 050000000\") بالنمط (\"([0-9]+)\"): %s\ج"، مـتم.مـحارف.انمط("([0-9]+)"، "هاتف: 050000000", 1)~محتوى.متطابقات(1)~مؤشر)؛
  }؛
}؛

رئـيسي.ابدأ()؛
