اشمل "مـتم/شـبكة.أسس"؛
اشمل "مـتم/طـرفية.أسس"؛
اشمل "مـتم/ذاكـرة.أسس"؛
اشمل "مـتم/نـص.أسس"؛

وحدة رئـيسي
{
  دالة اختبر_طلب
  {
    عرف بيانات: مؤشر؛
    عرف حجم: صـحيح؛
    عرف الرابط: "https://example.org"؛
    إذا مـتم.شـبكة.هات(الرابط، بيانات~مؤشر، حجم~مؤشر) {
      مـتم.طـرفية.اطبع("%s\ج"، بيانات)؛
      مـتم.ذاكـرة.حرر(بيانات)؛
    } وإلا {
      مـتم.طـرفية.اطبع("فشل\ج")؛
    }؛
  }؛
  
  دالة اختبر_تشفير_عنواني
  {
    عرف مشفر: مـتم.نـص = مـتم.شـبكة.شفر_عنوانيا("abcd السلام عليكم")؛
    مـتم.طـرفية.اطبع("مشفرة: %s\ج"، مشفر.صوان)؛
    مـتم.طـرفية.اطبع("بعد الفك: %s\ج"، مـتم.شـبكة.فك_عنوانيا(مشفر).صوان)؛
  }
}؛

رئـيسي.اختبر_طلب()؛
رئـيسي.اختبر_تشفير_عنواني()؛

