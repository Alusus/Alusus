اشمل "مـتم/نـص.أسس"؛
اشمل "مـتم/مـصفوفة.أسس"؛
اشمل "مـتم/طـرفية.أسس"؛
استخدم مـتم؛

عرف رئـيسي: وحدة
{
  دالة اختبر_المشتركة {
    // بحث
    طـرفية.اطبع("جد '-': %s\ج"، نـص.جد("123 - 456 - 789"، '-'))؛
    طـرفية.اطبع("جد '-'، 4: %d\ج"، نـص.جد("123 - 456 - 789"، '-'، 4)~مثل[صـحيح[0]] != 0)؛
    طـرفية.اطبع("جد '-'، 5: %d\ج"، نـص.جد("123 - 456 - 789"، '-'، 5)~مثل[صـحيح[0]] != 0)؛
    طـرفية.اطبع("جد_آخر '-': %s\ج"، نـص.جد_آخر("123 - 456 - 789"، '-'))؛
    طـرفية.اطبع("جد \"124\": %s\ج"، نـص.جد("123 - 124 - 125"، "124"))؛

    // مقارنة
    طـرفية.اطبع("قارن \"123\" مع \"123\": %d\ج"، نـص.قارن("123"، "123"))؛
    طـرفية.اطبع("قارن \"123\" مع \"1234\": %d\ج"، نـص.قارن("123"، "1234"))؛
    طـرفية.اطبع("قارن 3 \"123\" مع \"1234\": %d\ج"، نـص.قارن("123"، "1234"، 3))؛

    // نسخ
    عرف صوان: مصفوفة[مـحرف، 100]؛
    نـص.انسخ(صوان~مؤشر، "-- بسم الله")؛
    طـرفية.اطبع("انسخ: %s\ج"، صوان~مؤشر)؛
    نـص.انسخ(صوان~مؤشر، "++ لا حول ولا قوة إلا بالله"، 2)؛
    طـرفية.اطبع("انسخ 2: %s\ج"، صوان~مؤشر)؛

    // سَلسلة
    نـص.سلسل(صوان~مؤشر، "، الحمد لله")؛
    طـرفية.اطبع("سلسل: %s\ج"، صوان~مؤشر)؛
    نـص.سلسل(صوان~مؤشر، "!!!!!"، 2)؛
    طـرفية.اطبع("سلسل 2: %s\ج"، صوان~مؤشر)؛

    // طول
    طـرفية.اطبع("هات_الطول: %d\ج"، نـص.هات_الطول(صوان~مؤشر))؛
    
    // املأ
    طـرفية.اطبع("املأ: %s\ج"، نـص.املأ("نص: %s، رقم: %i"، "ابجد1234"، 456).صوان)؛
    
    // اقرأ_صحيح و اقرأ_عائم و اقرأ_محرف_هكس
    طـرفية.اطبع("اقرأ_صحيح: %d\ج"، نـص.اقرأ_صحيح("432"))؛
    طـرفية.اطبع("اقرأ_عائم: %f\ج\ج"، نـص.اقرأ_عائم("-634.12"))؛
    طـرفية.اطبع("اقرأ_محرف_هكس: %d\ج"، نـص.اقرأ_محرف_هكس('D'))؛
  }؛

  دالة اختبر_الصنف {
    عرف م: نـص؛
    م = "لغة"؛
    طـرفية.اطبع(م)؛
    طـرفية.اطبع("\جالطول: %d\ج"، م.هات_الطول())؛

    عرف ع: صحيح؛
    لكل ع = 0، ع < م.هات_الطول()، ++ع طـرفية.اطبع("م(%d) = %c\ج"، ع، م(ع))؛

    طـرفية.اطبع(م + " الأسس\ج")؛

    م = "مرحبا {اسم}. هل تود استخدام {اسم} كاسم المستخدم؟\ج"؛
    طـرفية.اطبع(م.استبدل("{اسم}"، "يوسف"))؛

    م = "  \ج بسم الله \ج "؛
    طـرفية.اطبع("شذب:")؛
    طـرفية.اطبع(م.شذب())؛
    طـرفية.اطبع("\جشذب_البداية:")؛
    طـرفية.اطبع(م.شذب_البداية())؛
    طـرفية.اطبع("\جشذب_النهاية:")؛
    طـرفية.اطبع(م.شذب_النهاية())؛
    طـرفية.اطبع("\جاجتزئ:")؛
    طـرفية.اطبع(م.اجتزئ(4، 6))؛
    طـرفية.اطبع("\ج")؛

    إذا م.اجتزئ(11، 8) == "الله" طـرفية.اطبع("نجحت المقارنة\ج")؛

    عرف مم: مـصفوفة[نـص] = م.شذب().قطع(" ")؛
    لكل ع = 0، ع < مم.هات_الطول()، ++ع {
      طـرفية.اطبع(مم(ع))؛
      طـرفية.اطبع("\ج")؛
    }؛

    م = نـص.ادمج(مم، "_")؛
    طـرفية.اطبع(م)؛
    طـرفية.اطبع("\ج")؛

    عرف ترحيب: نـص = "Hello World - مع نص عربي"؛
    طـرفية.اطبع("الى_اكبر: %s\n", ترحيب.كبر().buf)؛
    طـرفية.اطبع("الى_اصغر: %s", ترحيب.صغر().buf)؛
  }؛
}؛

رئـيسي.اختبر_المشتركة()؛
رئـيسي.اختبر_الصنف()؛

