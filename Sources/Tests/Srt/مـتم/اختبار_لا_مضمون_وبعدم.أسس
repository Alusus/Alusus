اشمل "مـتم/بـعدم"؛
اشمل "مـتم/لـا_مضمون"؛
اشمل "مـتم/أخطاء"؛
اشمل "مـتم/طـرفية"؛
اشمل "مـتم/سندات"؛
اشمل "مـتم/نـص"؛

استخدم مـتم؛

دالة اختبر {
    عرف ع1: بـعدم[صـحيح]؛
    عرف ع2: بـعدم[صـحيح](3)؛
    عرف ع3: بـعدم[صـحيح]؛
    عرف لا1: لـا_مضمون[صـحيح] = لـا_مضمون[صـحيح].نجاح(4)؛
    عرف لا2: لـا_مضمون[صـحيح] = لـا_مضمون[صـحيح].فشل(
        سـندنا[خـطأ_عام].أنشئ().{ الرمز = "اختبار_خطأ1"؛ الرسالة = "فشل!" }
    )؛

    طـرفية.اطبع("ع1.أهو_عدم: %d\ج"، ع1.أهو_عدم~مثل[صـحيح])؛
    طـرفية.اطبع("ع2.أهو_عدم: %d، ع2.القيمة: %d\ج"، ع2.أهو_عدم~مثل[صـحيح]، ع2.القيمة)؛
    ع3 = ع2؛
    طـرفية.اطبع("ع3 = ع2 -> ع3.أهو_عدم: %d، ع3.القيمة: %d\ج"، ع3.أهو_عدم~مثل[صـحيح]، ع3.القيمة)؛
    ع3 = ع1؛
    طـرفية.اطبع("ع3 = ع1 -> ع3.أهو_عدم: %d\ج"، ع3.أهو_عدم~مثل[صـحيح])؛

    طـرفية.اطبع("لا1.القيمة: %d، لا1.الخطأ: %ld\ج"، لا1.القيمة، لا1.الخطأ.كائن~مؤشر)؛
    طـرفية.اطبع(
        "لا2.الخطأ.الرمز: %s، لا2.الخطأ.الرسالة: %s\ج"،
        لا2.الخطأ.هات_الرمز().صوان،
        لا2.الخطأ.هات_الرسالة().صوان
    )؛
}

اختبر()؛
