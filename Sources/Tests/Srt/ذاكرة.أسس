 اشمل "متم.أسس"؛

عرف ـرئيسي: حزمة
{
  عرف إبدأ: دالة ()
  {
    عرف صوان: مؤشر[ـصحيح]؛
    عرف س: ـصحيح؛

    // اختبر "احجز".
    ـمتم.ـطرفية.اطبع("اختبار `احجز`:\ج")؛
    صوان = ـمتم.ـذاكرة.احجز(ـصحيح~حجم * 10)~مثل[مؤشر[ـصحيح]]؛
    لكل س = 0، س < 10، ++س صوان~مثل[مؤشر[مصفوفة[ـصحيح]]]~محتوى(س) = س * 2؛
    لكل س = 0، س < 10، ++س {
      ـمتم.ـطرفية.اطبع("العنصر %d: %d\ج"، س، صوان~مثل[مؤشر[مصفوفة[ـصحيح]]]~محتوى(س))؛
    }؛

    // اختبر `أعد_الحجز`.
    ـمتم.ـطرفية.اطبع("\جاختبار `أعد_الحجز:\ج")؛
    صوان = ـمتم.ـذاكرة.أعد_الحجز(صوان، ـصحيح~حجم * 20)~مثل[مؤشر[ـصحيح]]؛
    لكل س = 0، س < 20، ++س صوان~مثل[مؤشر[مصفوفة[ـصحيح]]]~محتوى(س) = س * 2؛
    لكل س = 0، س < 20، ++س {
      ـمتم.ـطرفية.اطبع("العنصر %d: %d\ج"، س، صوان~مثل[مؤشر[مصفوفة[ـصحيح]]]~محتوى(س))؛
    }؛

    ـمتم.ـذاكرة.حرر(صوان)؛

    // اختبر `احجز_مرصوف`.
    ـمتم.ـطرفية.اطبع("\جاختبار `احجز_مرصوف`:\ج")؛
    صوان = ـمتم.ـذاكرة.احجز_مرصوف(ـصحيح~حجم، ـصحيح~حجم * 10)~مثل[مؤشر[ـصحيح]]؛
    لكل س = 0، س < 10، ++س صوان~مثل[مؤشر[مصفوفة[ـصحيح]]]~محتوى(س) = س * 2؛
    لكل س = 0، س < 10، ++س {
      ـمتم.ـطرفية.اطبع("العنصر %d: %d\ج"، س، صوان~مثل[مؤشر[مصفوفة[ـصحيح]]]~محتوى(س))؛
    }؛
    ـمتم.ـذاكرة.حرر(صوان)؛

    // اختبر `اضبط` و `انسخ` و `قارن`.
    ـمتم.ـطرفية.اطبع("\جاختبار `اضبط` و `انسخ` و `قارن`:\ج")؛
    صوان = ـمتم.ـذاكرة.احجز(ـصحيح~حجم * 10)~مثل[مؤشر[ـصحيح]]؛
    لكل س = 0، س < 10، ++س صوان~مثل[مؤشر[مصفوفة[ـصحيح]]]~محتوى(س) = س * 2؛
    عرف صوان2: مؤشر[ـصحيح]؛
    صوان2 = ـمتم.ـذاكرة.احجز(ـصحيح~حجم * 10)~مثل[مؤشر[ـصحيح]]؛
    ـمتم.ـذاكرة.اضبط(صوان2، 0، ـصحيح~حجم * 10)؛
    ـمتم.ـطرفية.اطبع("مقارنة مصفوفة بأصفار: %d\ج"، ـمتم.ـذاكرة.قارن(صوان، صوان2، ـصحيح~حجم * 10))؛
    ـمتم.ـطرفية.اطبع("مقارنة أصفار بمصفوفة: %d\ج"، ـمتم.ـذاكرة.قارن(صوان2، صوان، ـصحيح~حجم * 10))؛
    ـمتم.ـذاكرة.انسخ(صوان2، صوان، ـصحيح~حجم * 10)؛
    ـمتم.ـطرفية.اطبع("مقارنة مصفوفتين متطابقتين: %d\ج"، ـمتم.ـذاكرة.قارن(صوان، صوان2، ـصحيح~حجم * 10))؛
    ـمتم.ـذاكرة.حرر(صوان)؛
    ـمتم.ـذاكرة.حرر(صوان2)؛
  }؛
}؛

نفذ ـرئيسي.إبدأ؛

