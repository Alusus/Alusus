@تصدير[main] دالة ابدأ {
  مـتم.طـرفية.اطبع("تحية من ملف تنفيذي.\ج")؛
}؛

@تصدير[main] دالة ابدأ2 {
  مـتم.طـرفية.اطبع("تحية من ملف تنفيذي آخر.\ج")؛
}؛

إذا !بـناء.أنشئ_تنفيذي(ابدأ~شبم، "/tmp/اختبار_الأسس") {
  مـتم.طـرفية.اطبع("فشل البناء.\ج")؛
} وإلا {
  مـتم.نـظام.شغل("/tmp/اختبار_الأسس")؛
}؛

عرف تنفيذي: بـناء.تـنفيذي(ابدأ2~شبم، "/tmp/اختبار_الأسس2")؛
إذا !تنفيذي.أنتج() {
  مـتم.طـرفية.اطبع("فشل البناء.\ج")؛
