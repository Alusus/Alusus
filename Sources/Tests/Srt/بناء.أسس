اشمل "مـتم/طـرفية.أسس"؛
اشمل "مـتم/نـظام.أسس"؛
اشمل "مـتم/ذاكـرة.أسس"؛
اشمل "بـناء.أسس"؛

@تصدير[main] دالة ابدأ {
  مـتم.طـرفية.اطبع("تحية من ملف تنفيذي.\ج")؛
}؛

@تصدير[main] دالة ابدأ2 {
  مـتم.طـرفية.اطبع("تحية من ملف تنفيذي آخر.\ج")؛
}؛

إذا !بـناء.أنشئ_تنفيذي(ابدأ~شبم، "/tmp/اختبار_الأسس") {
  مـتم.طـرفية.اطبع("فشل البناء.\ج")؛
} وإلا {
  مـتم.نـظام.شغل("/tmp/اختبار_الأسس")؛
}؛

عرف بناء: مؤشر[بـناء.تـنفيذي] = بـناء.تـنفيذي.أنشئ(ابدأ2~شبم، "/tmp/اختبار_الأسس2")؛
إذا !بـناء.تـنفيذي.أنتج(بناء) {
  مـتم.طـرفية.اطبع("فشل البناء.\ج")؛
} وإلا {
  مـتم.نـظام.شغل("/tmp/اختبار_الأسس2")؛
}؛
مـتم.ذاكـرة.حرر(بناء)؛

