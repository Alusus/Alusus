اشمل "مـتم/طـرفية.أسس"؛
اشمل "مـتم/مـصفوفة.أسس"؛

دالة اختبر {
  عرف م: مـتم.مـصفوفة[صحيح]؛
  م.أضف(5)؛
  م.أضف(3)؛
  م.أضف(74)؛
  م.أضف(5)؛
  م.احشر(2، 8)؛

  عرف ع: صحيح؛
  لكل ع = 0، ع < م.هات_الطول()، ++ع مـتم.طـرفية.اطبع("م(%d) = %d\ج"، ع، م(ع))؛

  م.أزل(3)؛
  مـتم.طـرفية.اطبع("بعد إزالة العنصر 3:\ج")؛
  لكل ع = 0، ع < م.هات_الطول()، ++ع مـتم.طـرفية.اطبع("م(%d) = %d\ج"، ع، م(ع))؛

  م.فرغ()؛
  مـتم.طـرفية.اطبع("الطول بعد التفريغ: %d\ج"، م.هات_الطول())؛
}؛

اختبر()؛

