import "common.alusus";

def ExplicitCasting : module {
  def main : function() {
    def i : int;
    def d : double;
    i = 1;
    d = i~cast[double];
    printDouble(i);
    print("\n");
    // Test pointer casting.
    i~ptr~cast[ptr[float]]~cnt = 3.0f;
    printf("%d\n", i);
    printDouble(i~ptr~cast[ptr[float]]~cnt);
    print("\n");
    return 0;
  }
};

run ExplicitCasting;
