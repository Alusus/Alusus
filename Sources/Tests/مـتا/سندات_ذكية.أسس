اشمل "مـتا/سندات"؛
اشمل "مـتا/ذاكـرة"؛
اشمل "مـتا/طـرفية"؛
استخدم مـتا؛

صنف رقـم {
    عرف س: صحيح؛
    عملية هذا~أتلف() {
        طـرفية.اطبع("أتلف الرقم %d.\ج"، هذا.س)؛
    }
}

دالة اختبر1 {
    عرف ر: سـندنا[رقـم]؛
    ر.احجز()~تتبع~هيئ()؛
    ر.س = 5؛
}

دالة اختبر2 {
    عرف ر: سـندي[رقـم] = ذاكـرة.احجز(رقـم~حجم)~مثل[مؤشر[رقـم]]؛
    ر.س = 7؛
}؛

دالة اختبر_الكل {
    اختبر1()؛
    اختبر2()؛
}

اختبر_الكل()؛

