اشمل "مـتا/مـصفوفة"؛
اشمل "مـتا/طـرفية"؛
استخدم مـتا؛

دالة اختبر {
    عرف م: مـصفوفة[صحيح]؛
    م.أضف(5)؛
    م.أضف(3)؛
    م.أضف(74)؛
    م.أضف(5)؛
    م.احشر(2، 8)؛

    عرف ع: صحيح؛
    لكل ع = 0، ع < م.هات_الطول()، ++ع طـرفية.اطبع("م(%d) = %d\ج"، ع، م(ع))؛

    م.أزل(3)؛
    طـرفية.اطبع("بعد إزالة العنصر 3:\ج")؛
    لكل ع = 0، ع < م.هات_الطول()، ++ع طـرفية.اطبع("م(%d) = %d\ج"، ع، م(ع))؛

    م.فرغ()؛
    طـرفية.اطبع("الطول بعد التفريغ: %d\ج"، م.هات_الطول())؛

    م.أضف({ 8، 5، 3، 9 })؛
    طـرفية.اطبع("بعد إضافة كتلة عناصر:\ج")؛
    لكل ع = 0، ع < م.هات_الطول()، ++ع طـرفية.اطبع("م(%d) = %d\ج"، ع، م(ع))؛

    عرف ن: مـصفوفة[صحيح]({ 17، 71، 33 })؛
    طـرفية.اطبع("بعد التهيئة بكتلة عناصر:\ج")؛
    لكل ع = 0، ع < ن.هات_الطول()، ++ع طـرفية.اطبع("ن(%d) = %d\ج"، ع، ن(ع))؛
}؛

اختبر()؛

