اشمل "مـتا/مـصفوفة.أسس"؛
اشمل "مـتم/طـرفية.أسس"؛

دالة اختبر {
    عرف م: مـتا.مـصفوفة[صحيح]؛
    م.أضف(5)؛
    م.أضف(3)؛
    م.أضف(74)؛
    م.أضف(5)؛
    م.احشر(2، 8)؛

    عرف ع: صحيح؛
    لكل ع = 0، ع < م.هات_الطول()، ++ع مـتم.طـرفية.اطبع("م(%d) = %d\ج"، ع، م(ع))؛

    م.أزل(3)؛
    مـتم.طـرفية.اطبع("بعد إزالة العنصر 3:\ج")؛
    لكل ع = 0، ع < م.هات_الطول()، ++ع مـتم.طـرفية.اطبع("م(%d) = %d\ج"، ع، م(ع))؛

    م.فرغ()؛
    مـتم.طـرفية.اطبع("الطول بعد التفريغ: %d\ج"، م.هات_الطول())؛
    
    م.أضف({ 8، 5، 3، 9 })؛
    مـتم.طـرفية.اطبع("بعد إضافة كتلة عناصر:\ج")؛
    لكل ع = 0، ع < م.هات_الطول()، ++ع مـتم.طـرفية.اطبع("م(%d) = %d\ج"، ع، م(ع))؛
    
    عرف ن: مـتا.مـصفوفة[صحيح]({ 17، 71، 33 })؛
    مـتم.طـرفية.اطبع("بعد التهيئة بكتلة عناصر:\ج")؛
    لكل ع = 0، ع < ن.هات_الطول()، ++ع مـتم.طـرفية.اطبع("ن(%d) = %d\ج"، ع، ن(ع))؛  
}؛

اختبر()؛

