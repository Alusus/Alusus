اشمل "مـتا/طـرفية"؛
اشمل "مـتا/تـطبيق"؛
اشمل "مـتا/نـص"؛

استخدم مـتا؛

دالة اختبر {
  عرف م1: تـطبيق[صـحيح, صـحيح]؛
  م1.حدد(1, 100).حدد(100, 1)؛
  طـرفية.اطبع("م1: 1 هو %d و100 هو %d\n", م1(1), م1(100))؛

  عرف م2: تـطبيق[ثـنائي, صـحيح]؛
  م2.حدد(خطا, 1).حدد(صح, 2)؛
  طـرفية.اطبع("م2: الخط هو %d والصح هو %d\n", م2(خطا), م2(صح))؛
    
  عرف م3: تـطبيق[صـحيح, مؤشر[مصفوفة[محرف]]]؛
  م3.حدد(0, "مرحبا").حدد(1, "بالعالم")؛
  طـرفية.اطبع("م3: 0 هو %s و1 هو %s\n", م3(0), م3(1))؛
  
  عرف م4: تـطبيق[نـص، نـص]؛
  م4.حدد(نـص("الاسم")، نـص("محمد")).حدد(نـص("العمر")، نـص("18 عامًا")).حدد(نـص("العنوان")، نـص("القدس"))؛
  طـرفية.اطبع("موقع العنوان: %d\ج"، م4.جد_الموقع(نـص("العنوان")))؛
  طـرفية.اطبع("المفتاح عند الموقع 2: %s\ج"، م4.المفتاح_عند(2).صوان)؛
  طـرفية.اطبع("القيمة عند الموقع 2: %s\ج"، م4.القيمة_عند(2).صوان)؛
}؛

اختبر()؛

