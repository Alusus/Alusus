اشمل "مـتم/طـرفية.أسس"؛

عرّف حـلقات : حزمة
{
  عرّف ابدأ : دالّة ()
  {
    عرف س: صـحيح؛
    لكل س = 0، س < 10، ++س {
      مـتم.طـرفية.اطبع(س)؛
      مـتم.طـرفية.اطبع("\ج")؛
    }؛
    س = 0؛
    بينما س < 10 {
      مـتم.طـرفية.اطبع(س)؛
      مـتم.طـرفية.اطبع("\ج")؛
      س += 2؛
    }؛
  }
}؛

حـلقات.ابدأ()؛

