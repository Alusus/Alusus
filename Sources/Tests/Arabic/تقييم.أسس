اشمل "مـتم/طـرفية"؛
اشمل "مـتم/تـطبيق"؛
اشمل "مـتم/نـص"؛
اشمل "الـقلب/أسـاسيات"؛
اشمل "نـبم"؛

استخدم مـتم؛

دالة ابدأ {
    استخدم مـتم.طـرفية؛
    اطبع("بسم الله")؛
    تمهيد اطبع("مقدمة...\ج")؛
    اطبع(" الرحمن الرحيم\ج")؛
    تمهيد {
        نـبم.مدير_شبم.احشر_شبم(شبم { عرف س: صحيح }، تـطبيق[نـص، سند[الـقلب.أسـاسيات.كـائن_بهوية]]())؛
    }؛
    س = 5؛
    اطبع("س = %d\ج"، س)؛
}؛

