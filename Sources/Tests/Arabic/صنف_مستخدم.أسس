اشمل "مـتم/طـرفية.أسس"؛

عرّف أصـناف : وحدة
{
  عرّف نـقطة : صنف
  {
    عرّف س : صـحيح[32]؛
    عرّف ص : صـحيح[32]؛
  }؛

  صنف حـجم
  {
    عرف طول: صـحيح[32]؛
    عرف عرض: صـحيح[32]؛
  }؛

  @دمج صنف حـجم
  {
    عرف ارتفاع: صـحيح[32]؛
  }؛

  عرّف ابدأ : دالّة ()
  {
    عرّف ن : نـقطة؛
    ن.س = 10؛
    ن.ص = 5؛
    مـتم.طـرفية.اطبع("س = %d، ص = %d\ج"، ن.س، ن.ص)؛
    عرف ح: حـجم؛
    ح.طول = 10؛
    ح.عرض = 20؛
    ح.ارتفاع = 30؛
    مـتم.طـرفية.اطبع("طول = %d، عرض = %d، ارتفاع = %d\ج"، ح.طول، ح.عرض، ح.ارتفاع)؛
  }
}؛

أصـناف.ابدأ()؛

