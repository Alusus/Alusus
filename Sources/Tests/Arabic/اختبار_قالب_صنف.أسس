اشمل "الـقلب/أسـاسيات"؛
اشمل "مـتم/نـص"؛

@تصدير[printf] دالة اطبع (س: مؤشر[طبيعي[8]]، ...أيما) => صحيح؛

صنف صـنفي [ص: صنف، د: دالة، ح: صحيح، م: محارف]
{
  عرف غ: ص؛

  @عضو دالة اطبعه (هذا: سند[هذا_الصنف])
  {
    اطبع(م، هذا.غ، ح)؛
  }؛

  @عضو دالة شغل (هذا: سند[هذا_الصنف])
  {
    د()؛
  }؛
}؛

دالة اطبع_واحد
{
  اطبع("واحد\ج")؛
}؛

عرف ا: صـنفي[صحيح، اطبع_واحد، 3، "%d, %d\ج"]؛
ا.غ = 5؛
ا.اطبعه()؛
ا.شغل()؛

صنف قـالب_شبم [ش: شبم] {
    تمهيد {
        اطبع("%s\ج"، ش~شبم.هات_هويتي().اسم_الصنف.صوان)؛
    }
}

دالة اختبر_معطى_قالب_شبم {
    عرف ا: قـالب_شبم[س || ص]؛
    عرف ب: قـالب_شبم[س || ص]؛
    عرف ت: قـالب_شبم[س + ص]؛
}
اختبر_معطى_قالب_شبم()؛

صنف قـالب_وحدة [وح: وحدة] {
    تمهيد {
        اطبع("%s\ج"، وح~شبم.هات_هويتي().اسم_الصنف.صوان)؛
    }
}

وحدة وحـدة1 {}

دالة اختبر_معطى_قالب_وحدة {
    عرف ا: قـالب_وحدة[وحـدة1]؛
}
اختبر_معطى_قالب_وحدة();

صنف قـالب_سند_شبم [ش: سند_شبم] {
    تمهيد {
        اطبع("%s\ج"، ش~شبم.هات_هويتي().اسم_الصنف.صوان)؛
    }
}

عرف شجرة: س * ص؛

دالة اختبر_معطى_قالب_سند_شبم {
    عرف ا: قـالب_سند_شبم[شجرة]؛
}
اختبر_معطى_قالب_سند_شبم();
