اشمل "مـتم/طـرفية"؛
اشمل "مـتم/تـطبيق"؛
اشمل "مـتم/نـص"؛
اشمل "الـقلب/أسـاسيات"؛
اشمل "نـبم"؛

استخدم مـتم؛

صنف صـنفي {
    عرف ع: صحيح؛
    @عضو ماكرو اطبعه[هذا، نص] {
        اطبع(نص، هذا.ع)؛
    }
}

دالة ابدأ {
    استخدم مـتم.طـرفية؛
    اطبع("بسم الله")؛
    تمهيد اطبع("مقدمة...\ج")؛
    اطبع(" الرحمن الرحيم\ج")؛
    تمهيد {
        نـبم.مدير_شبم.احشر_شبم(شبم { عرف س: صحيح }، تـطبيق[نـص، سند[الـقلب.أسـاسيات.كـائن_بهوية]]())؛
    }؛
    س = 5؛
    اطبع("س = %d\ج"، س)؛
    عرف ص: صـنفي؛
    ص.ع = 18؛
    ص.اطبعه["ص.ع = %d\ج"]؛
}؛

ابدأ()؛

ماكرو عرف_صحيح [م] { عرف م: صحيح؛ }

دالة اختبار_شبم_حرفي1 {
  شبم عرف_صحيح[ن]؛
}

دالة اختبار_شبم_حرفي2 {
  @بلا_تمهيد شبم عرف_صحيح[ن]؛
}

اختبار_شبم_حرفي1()؛
اختبار_شبم_حرفي2()؛
أدرج_ش_ب_م اختبار_شبم_حرفي1؛
أدرج_ش_ب_م اختبار_شبم_حرفي2؛

