اشمل "مـتم/طـرفية.أسس"؛

عرّف سـندات : وحدة {
    دالة ابدأ () {
        عرّف ا : صـحيح[32]؛
        عرّف ب : سند[صـحيح[32]]؛
        ا = 5؛
        ب~عطل_التتبع = ا؛
        مـتم.طـرفية.اطبع("%d\ج"، ب)؛
        ب~هيئ(6)؛
        مـتم.طـرفية.اطبع("%d\ج"، ا)؛

        عرف ت: سند[سند[صحيح]]؛
        ت~عطل_التتبع = ب؛
        عرف ث: صحيح = 7؛
        ت~تتبع~عطل_التتبع = ث؛
        مـتم.طـرفية.اطبع("%d\ج"، ب)؛
        
        جرب_سندا_مؤقتا(5ص32)؛
    }
    
    دالة جرب_سندا_مؤقتا (س: سند_مؤقت[صحيح]) {
        مـتم.طـرفية.اطبع("قيمة من سند مؤقت: %d\ج"، س)؛
    }
