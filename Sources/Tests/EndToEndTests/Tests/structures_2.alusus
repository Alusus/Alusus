import "common.alusus";

def Structures2 : module {
  def point : struct
  {
    def x : ptr[int];
    def y : ptr[int];
  };

  def main : function()
  {
    def x : int;
    def y : int;
    x := 10;
    y := 5;
    def p : point;
    p.x := x~ptr;
    p.y := y~ptr;
    printf("x = %d, y = %d\n", p.x~cnt, p.y~cnt);
    p.x~cnt := 6;
    p.y~cnt := 3;
    printf("x = %d, y = %d\n", x, y);
  }
};

run Structures2;
