اشمل "مـتم/طـرفية.أسس"؛

عرف إدخـال: وحدة
{
  استخدم مـتم.طـرفية؛

  عرف إبدأ: دالة ()
  {
    اطبع("أدخل بعض المحارف ثم اكبس إدخال (اكبس إدخال مرتين لإنهاء الادخال): ")؛
    عرف م: طبيعي؛
    عرف م_سابق: طبيعي؛
    م_سابق = 0؛
    م = أدخل_محرفا()؛
    بينما م != '\ج' || م_سابق != '\ج' {
      أخرج_محرفا(م)؛
      م_سابق = م؛
      م = أدخل_محرفا()؛
    }؛

    عرف ع: عـائم؛
    اطبع("أدخل رقماً عائماً: ")؛
    ع = أدخل_عائم()؛
    اطبع("أدخل عدد التكرارات: ")؛
    م = أدخل_صحيح()؛
    بينما م > 0 {
      اطبع(ع)؛
      اطبع("\ج")؛
      --م؛
    }؛

    أدخل_محرفا()؛ // فرغ الإدخال من \ج.
    اطبع("أدخل سلسلة محارف لتكرارها: ")؛
    عرف محارف: مصفوفة[مـحرف، 100]؛
    أدخل_محارف(محارف~مؤشر، 100)؛
    اطبع("أدخل عدد التكرارات: ")؛
    م = أدخل_صحيح()؛
    بينما م > 0 {
      اطبع(محارف~مؤشر)؛
      اطبع("\ج")؛
      --م؛
    }؛
  }؛
}؛

إدخـال.إبدأ()؛

