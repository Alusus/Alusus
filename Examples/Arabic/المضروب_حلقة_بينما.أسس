اشمل "عامة.أسس"؛

عرّف المضروب_حلقة_بينما : حزمة {
  عرّف مضروب : دالّة (ا:العدد_الصحيح) => العدد_الصحيح {
    إذا ا<=0 أرجع 1؛
    عرّف م : العدد_الصحيح؛
    م := ا؛
    بينما (ا >= 2) {
      ا := ا - 1؛
      م := م*ا؛
    }؛
    أرجع م
  }؛
  
  عرّف إبدأ : دالّة () {
    اطبع("مضروب 5 هو %d\ج"، مضروب(5))؛
    أرجع 0
  }
}؛

نفّذ المضروب_حلقة_بينما

