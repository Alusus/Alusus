اشمل "متم.أسس"؛

عرف ـمضروب_بينما: حزمة
{
  عرف مضروب: دالة (ع: ـصحيح) => ـصحيح
  {
    إذا ع <= 0 أرجع 1؛
    عرف ف: ـصحيح؛
    ف = ع؛
    بينما ع >= 2 {
      --ع؛
      ف = ف * ع؛
    }؛
    أرجع ف؛
  }؛

  عرف إبدأ: دالة ()
  {
    ـمتم.ـطرفية.اطبع("مضروب 5 = %d\ج"، مضروب(5))؛
  }؛
}؛

نفذ ـمضروب_بينما.إبدأ؛

