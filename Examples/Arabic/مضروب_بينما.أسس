اشمل "عامة.أسس"؛

عرف ـمضروب_بينما: حزمة
{
  عرف مضروب: دالة (ع: ـصحيح[32]) => ـصحيح[32]
  {
    إذا ع <= 0 أرجع 1؛
    عرف ف: ـصحيح[32]؛
    ف = ع؛
    بينما ع >= 2 {
      --ع؛
      ف = ف * ع؛
    }؛
    أرجع ف؛
  }؛

  عرف إبدأ: دالة ()
  {
    ـمتم.اطبع("مضروب 5 = %d\ج"، مضروب(5))؛
  }؛
}؛

نفذ ـمضروب_بينما.إبدأ؛
 
