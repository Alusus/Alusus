اشمل "مـتم/طـرفية.أسس"؛

عرف مـضروب_لـكل: حزمة
{
  عرف مضروب: دالة (ع: صـحيح) => صـحيح
  {
    إذا ع <= 0 أرجع 1؛
    عرف ف: صـحيح؛
    ف = ع؛
    لكل ع = ع-1، ع >= 2، --ع ف = ف*ع؛
    أرجع ف؛
  }؛

  عرف إبدأ: دالة ()
  {
    مـتم.طـرفية.اطبع("مضروب 5 = %d\ج"، مضروب(5))؛
  }؛
}؛

نفذ مـضروب_لـكل.إبدأ؛

