import "Srl/Console.alusus";
import "Srl/System.alusus";
import "Srl/File.alusus";

def Main: module
{
  def start: function
  {
    def j: Word;
    j = 0;
    while 1 {
      Srl.Console.print("  %d\r", j);
      Srl.File.flush(0~cast[ptr[Void]]);
      ++j;
      Srl.System.sleep(1 * 1000000);
    }
  };
};

run Main.start;
