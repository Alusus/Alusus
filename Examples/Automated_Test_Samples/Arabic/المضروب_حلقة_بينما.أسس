اشمل "عامة.أسس"؛

عرّف ـمضروب_بينما : حزمة {
  عرّف مضروب : دالّة (ا: ـصحيح) => ـصحيح
  {
    إذا ا <= 0 أرجع 1؛
    عرّف م: ـصحيح؛
    م = ا؛
    بينما (ا >= 2) {
      ا = ا - 1؛
      م = م*ا؛
    }؛
    أرجع م
  }؛

  عرّف إبدأ : دالّة () {
    ـمتم.اطبع("مضروب 5 هو %d\ج"، مضروب(5))؛
  }
}؛

نفّذ ـمضروب_بينما.إبدأ

